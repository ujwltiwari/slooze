    {
      "name": "Restaurants & Menu",
      "item": [
        {
          "name": "Get Restaurants (Role Based)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "graphql",
              "graphql": {
                "query": "query {\n  restaurants {\n    id\n    name\n    country\n    menuItems {\n      id\n      name\n      price\n    }\n  }\n}",
                "variables": "{}"
              }
            },
            "url": { "raw": "{{baseUrl}}", "host": ["{{baseUrl}}"] }
          }
        },
        {
          "name": "Get Specific Restaurant",
          "request": {
            "method": "POST",
            "header": [
               { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "graphql",
              "graphql": {
                "query": "query GetRestaurant($id: Int!) {\n  restaurant(id: $id) {\n    id\n    name\n    country\n    menuItems {\n      id\n      name\n      price\n    }\n  }\n}",
                "variables": "{\n  \"id\": 1\n}"
              }
            },
            "url": { "raw": "{{baseUrl}}", "host": ["{{baseUrl}}"] }
          }
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Get My Orders",
          "request": {
             "method": "POST",
             "header": [
               { "key": "Authorization", "value": "Bearer {{token}}" }
             ],
             "body": {
              "mode": "graphql",
              "graphql": {
                "query": "query {\n  orders {\n    id\n    status\n    totalAmount\n    restaurant { name country }\n    items { menuItem { name } quantity }\n  }\n}",
                "variables": "{}"
              }
            },
             "url": { "raw": "{{baseUrl}}", "host": ["{{baseUrl}}"] }
          }
        },
        {
          "name": "Create Order",
          "request": {
             "method": "POST",
             "header": [
               { "key": "Authorization", "value": "Bearer {{token}}" }
             ],
             "body": {
              "mode": "graphql",
              "graphql": {
                "query": "mutation CreateOrder($input: CreateOrderInput!) {\n  createOrder(createOrderInput: $input) {\n    id\n    totalAmount\n    status\n  }\n}",
                "variables": "{\n  \"input\": {\n    \"restaurantId\": 1,\n    \"items\": [ { \"menuItemId\": 1, \"quantity\": 2 } ]\n  }\n}"
              }
            },
             "url": { "raw": "{{baseUrl}}", "host": ["{{baseUrl}}"] }
          }
        },
        {
          "name": "Checkout Order (Admin/Manager Only)",
          "request": {
             "method": "POST",
             "header": [
               { "key": "Authorization", "value": "Bearer {{token}}" }
             ],
             "body": {
              "mode": "graphql",
              "graphql": {
                "query": "mutation Checkout($id: Int!, $pmId: Int!) {\n  checkoutOrder(id: $id, paymentMethodId: $pmId) {\n    id\n    status\n  }\n}",
                "variables": "{\n  \"id\": 1,\n  \"pmId\": 1\n}"
              }
            },
             "url": { "raw": "{{baseUrl}}", "host": ["{{baseUrl}}"] }
          }
        },
        {
          "name": "Cancel Order (Admin/Manager Only)",
          "request": {
