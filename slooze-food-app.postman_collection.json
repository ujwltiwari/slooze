      "name": "Auth",
      "item": [
        {
          "name": "Login as Admin (Nick Fury)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.collectionVariables.set(\"token\", jsonData.data.login.token);",
                  "console.log(\"Admin Token Set to Collection Variables\");"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "graphql",
              "graphql": {
                "query": "mutation Login($email: String!, $password: String!) {\n  login(loginInput: { email: $email, password: $password }) {\n    token\n    user { id role country }\n  }\n}",
                "variables": "{\n  \"email\": \"nick@slooze.xyz\",\n  \"password\": \"password\"\n}"
              }
            },
            "url": { "raw": "{{baseUrl}}", "host": ["{{baseUrl}}"] }
          }
