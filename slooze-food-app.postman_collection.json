{
  "info": {
    "name": "Slooze Food Ordering App (GraphQL)",
    "_postman_id": "c5f2a4b4-0000-0000-0000-000000000001",
    "description": "Postman collection for role & country-based food ordering app (Nick Fury, managers, members). Fully updated for GraphQL API using native GraphQL body mode. Uses Collection Variables for seamless token handling.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
